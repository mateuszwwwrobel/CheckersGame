


<CheckersLayout>

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 15
        spacing: 15

        Label:
            id: welcome_label
            font_size: 40
            text: 'WELCOME TO THE GAME OF CHECKERS!'
            bold: True
            color: (.231, .353, .553, 1)
            size_hint: (1, 0.1)

        Label:
            text: "Choose your color:"
            bold: True
            font_size: 22
            color: (.231, .353, .553, 1)
            size_hint: (1, 0.05)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)

            BoxLayout:
                orientation: 'vertical'

                Label:
                    id: black_color_label
                    text: 'Black'
                    color: 'black'
                    bold: True
                    font_size: 20
                    size_hint: (1, 0.10)

                CheckBox:
                    id: black_color_checkbox
                    group: 'color_choice'
                    color: (.969, .573, .063, 1)
                    active: False

            BoxLayout:
                orientation: 'vertical'

                Label:
                    id: white_color_label
                    text: 'White'
                    bold: True
                    font_size: 20
                    size_hint: (1, 0.10)

                CheckBox:
                    id: white_color_checkbox
                    group: 'color_choice'
                    color: (.969, .573, .063, 1)
                    active: False

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)
            padding: 5

            Button:
                id: new_game_button
                text: 'Play New Game'
                font_size: 22
                bold: True
                color: (.231, .353, .553, 1)
                background_normal: 'img/white_blank.png'
                background_down: 'img/clicked.png'
                on_release: root.new_game(black_color_checkbox, white_color_checkbox)

            Button:
                id: quit_button
                text: 'Quit Game'
                font_size: 22
                bold: True
                color: (.231, .353, .553, 1)
                background_normal: 'img/white_blank.png'
                background_down: 'img/clicked.png'
                on_press: app.stop()

        GridLayout:
            id: buttons_widget
            cols: 8
            rows: 8

            spacing: 1

